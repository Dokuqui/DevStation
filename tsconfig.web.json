{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/render/src/**/**/*",
    "src/shared",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "paths": {
      "@renderer/*": [
        "./src/renderer/src/*",
        "./src/shared/*",
        "./src/renderer/src/store/*",
        "./src/renderer/src/components/*"
      ]
    }
  }
}
